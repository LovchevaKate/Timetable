@{
    ViewData["Title"] = "Exam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Exam</h2>

@model ExamViewModel
@*<form method="post" action="https://timetableweb.azurewebsites.net/api/ExamAPI" name="examForm">*@
    <form method="post" action="https://localhost:44375/api/ExamAPI" name="examForm">

        <input type="hidden" name="id" value="0" />

        <div class="form-group">
            <label for="subject">Subject:</label>
            @Html.DropDownListFor(w => w.Subject, ViewBag.Subjects as SelectList, "")
        </div>

        <div class="form-group">
            <label for="group">Group:</label>
            @Html.DropDownListFor(w => w.Group, new SelectList(new string[] { "ISIT-1", "ISIT-2", "ISIT-3", "POIT-4", "POIT-5", "POIT-6", "MOB-7", "MOB-8", "DEVI-9", "DEVI-10" }), "")
        </div>

        <div class="form-group">
            <label for="course">Course:</label>
            @Html.DropDownListFor(w => w.Course, new SelectList(new int[] { 1, 2, 3, 4 }), "")
        </div>

        <div class="form-group">
            <label for="date">Date:</label>
            <input class="form-control" name="Date" data-date-format="yyyy-mm-dd hh:ii">
        </div>

        <div class="panel-body">
            <button type="submit" class="btn btn-sm btn-primary">Сохранить</button>
            <a id="reset" class="btn btn-sm btn-primary">Сбросить</a>
        </div>
    </form>

    <table class="table table-condensed table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Group</th>
                <th>Date</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script src="~/js/ExamCRUD.js"></script>

